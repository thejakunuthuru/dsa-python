{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run python with input.txt",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "python3 \"${file}\" < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}